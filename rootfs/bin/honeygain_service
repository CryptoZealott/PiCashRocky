#!/bin/bash

if [[ "$USE_HONEYGAIN" != "n" ]]
then
    if [[ -z "$HG_EMAIL" || -z "$HG_PASSWORD" ]]; then
        echo ERROR: One or more honeygain settings are blank
        exit 1
    fi
    if [[ `uname -m` != "x86_64" ]]
    then
        su picash -c "/usr/bin/qemu-x86_64 -E LD_PRELOAD=/opt/honeygain/libhg.so.1.0.0 /opt/honeygain/honeygain -tou-accept -email $HG_EMAIL -pass $HG_PASSWORD -device `hostname`"
    else
        su picash -c "LD_PRELOAD=/opt/honeygain/libhg.so.1.0.0 /opt/honeygain/honeygain -tou-accept -email $HG_EMAIL -pass $HG_PASSWORD -device `hostname`"
    fi
else
    sleep 60 #TODO: make this better, maybe make s6 just not launch it goodnuff for now
fi